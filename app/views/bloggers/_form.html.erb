    <% if flash[:errors] %>
<h3>You have the following errors</h3>
<ul>
        <% flash[:errors].each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    <% end %>
</ul>

<%= form_for @blogger do |f| %>
<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
</div>
<div>
    <%= f.label :age %>
    <%= f.number_field :age %>
</div>
<%= f.submit%>
<% end %>
